<% title "#{@category.name} | Categories" %>
<div class="card">
  <div class="card-header">
    <h3>
      <%= @category.name %>
    </h3>
    <%= render 'badges', category: @category %>
  </div>
  <%= render 'challenges/list', challenges: @category.challenges %>
  <% if @category.challenges.empty? %>
    <p>This category doesn't have any challenges yet.</p>
  <% end %>
</div>
