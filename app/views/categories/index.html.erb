<% title "Categories" %>
<ul class="list-group">
  <% @categories.each do |category| %>
    <li class="list-group-item d-flex justify-content-between align-items-center">
      <span>
        <%= link_to category.name, category %>
      </span>
      <span><%= pluralize category.challenges.size, 'challenge' %></span>
    </li>
  <% end %>
</ul>
