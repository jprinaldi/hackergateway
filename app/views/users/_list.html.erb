<ul class="list-group">
  <% users.each do |user| %>
    <li class="list-group-item justify-content-between">
      <%= link_to user.username, user %>
      <% if solutions_count %>
        <%= link_to user_solutions_path(user) do %>
          <%= content_tag :span, class: 'badge badge-success badge-pill' do %>
            <%= user.solutions.size %>
          <% end %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
