<ul class="list-group">
  <% users.each do |user| %>
    <li class="list-group-item justify-content-between">
      <%= link_to user.username, user %>
      <% if solutions_count %>
        <%= content_tag :span, class: 'badge badge-success badge-pill' do %>
          <%= user.solutions.count %>
        <% end %>
      <% end %>
    </li>
  <% end %>
</ul>
