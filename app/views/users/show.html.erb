<%= content_tag :h2, "#{@user.username}'s profile" %>

<div class="row">
  <div class="col-md-6">
    <dl class="row">
      <dt class="col-md-3">Profile image</dt>
      <dd class="col-md-9"><%= image_tag @user.gravatar_url %></dd>

      <dt class="col-md-3">Username</dt>
      <dd class="col-md-9"><%= @user.username %></dd>

      <dt class="col-md-3">Country</dt>
      <dd class="col-md-9">
        <% if @user.country_code.blank? %>
          <%= fa_icon 'question-circle', text: 'Unknown', class: 'fa-fw' %>
        <% else %>
          <%= @user.country.emoji_flag %>
          <span>
            <%= @user.country.name %>
          </span>
        <% end %>
      </dd>

      <dt class="col-md-3">Solved challenges</dt>
      <dd class="col-md-9">
        <%= link_to user_solutions_path(@user) do %>
          <%= content_tag :span, class: 'badge badge-success badge-pill' do %>
            <%= @user.solutions.size %>
          <% end %>
        <% end %>
      </dd>

      <dt class="col-md-3">Badges</dt>
      <dd class="col-md-9">
        <%= render 'badges', badges: @user.badges %>
      </dd>
    </dl>
  </div>
  <div class="col-md-6">
    <div class="card">
      <div class="card-header">
        <%= link_to user_solutions_path(@user) do %>
          Solved challenges (<%= @user.solutions.size %>/<%= Challenge.count %>)
        <% end %>
      </div>
      <div class="card-block">
        <%= render 'solutions/challenges', solutions: @user.solutions %>
      </div>
    </div>
  </div>
</div>
