<% title "#{@challenge.name} solvers" %>

<div class="card">
  <div class="card-header">
    <%= content_tag :h1, "#{@challenge.name} solvers" %>
  </div>
  <ul class="list-group list-group-flush">
    <%= render partial: 'challenge_solution', collection: @challenge.solutions, as: :solution %>
  </ul>
  <% if @challenge.solvers.empty? %>
    <div class="card-body">
      <p class="card-text">This challenge doesn't have any solvers yet.
    </div>
  <% end %>
</div>
