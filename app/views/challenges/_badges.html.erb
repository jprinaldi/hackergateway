<ul class="list-inline mb-0">
  <li class="list-inline-item"><span class="badge badge-default"><%= challenge.category.name %></span></li>
  <li class="list-inline-item">
    <%= link_to solvers_challenge_path(challenge) do %>
      <span class="badge badge-info"><%= pluralize challenge.solvers.count, 'solver' %></span>
    <% end %>
  </li>
  <% if user_signed_in? %>
    <% if current_user.solved_challenges.include? challenge %>
      <li class="list-inline-item"><span class="badge badge-success">Solved</span></li>
    <% else %>
      <li class="list-inline-item"><span class="badge badge-warning">Unsolved</span></li>
    <% end %>
  <% end %>
</ul>
