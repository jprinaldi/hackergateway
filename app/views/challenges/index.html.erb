<div class="row">
  <% @categories.each do |category| %>
    <div class="col-lg-6 mb-3">
      <div class="card">
        <div class="card-header">
          <h3>
            <%= link_to category.name, category %>
          </h3>
          <%= render 'categories/badges', category: category %>
        </div>
        <%= render 'list', challenges: category.challenges %>
      </div>
    </div>
  <% end %>
</div>
